<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  
  <h3 id="myModalLabel">Свойства канала</h3>
</div>

<div class="modal-body"> 
  <%= form_for [project, request], :remote => true, :html => { :class => "form-horizontal" } do |f| %>
    <% if request.errors.any?  %>
      <div class="alert alert-block alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>

        <h4>При сохранинии запроса произошли ошибки</h4>

        <% request.errors.full_messages.each do |error| %>
          <p><%= error %></p>
        <% end %>
      </div>
    <% end %>

    <div class="control-group">
      <label class="control-label" for="inputSize">Размер</label>

      <div class="controls">
        <%= f.text_field :size, :id => 'inputSize' %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="inputLifetime">Время жизни</label>
      
      <div class="controls">
        <%= f.text_field :lifetime, :width => 100 %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="inputLifetime">Источник</label>
      
      <div class="controls">
        <%= collection_select(:request, :source_id, project.nodes, :id, :id) %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="inputLifetime">Сток</label>
      
      <div class="controls">
        <%= collection_select(:request, :target_id, project.nodes, :id, :id) %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="inputLifetime">Время поступления</label>
      
      <div class="controls">
        <%= f.text_field :start_time, :width => 100 %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.submit :class => 'btn btn-primary pull-left'  %>
    </div>
<% end %>
</div>
